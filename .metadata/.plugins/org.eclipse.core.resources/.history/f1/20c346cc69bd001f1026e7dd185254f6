package com.sathya.springmvc.product;

import com.sathya.springmvc.product.entity.ProductEntity;

public class ProductTest {
    public static void main(String[] args) {
        // Using no-arg constructor
        ProductEntity product1 = new ProductEntity();
        product1.setId(1);
        product1.setName("Laptop");
        product1.setBrand("TechBrand");
        product1.setMadeIn("USA");
        product1.setPrice(1200.50);
        product1.setQuantity(10);
        product1.setDiscountRate(0.15); // 15% discount
        product1.setTaxRate(0.10);     // 10% tax

        product1.calculateDerivedValues(); // Calculate derived fields
        System.out.println(product1);

        // Using all-args constructor
        ProductEntity product2 = new ProductEntity(
            2, "Smartphone", "BrandX", "Germany", 
            800.0, 5, 0.2, 0.12, 0, 0, 0, 0
        );

        product2.calculateDerivedValues(); // Calculate derived fields
        System.out.println(product2);
    }
}

